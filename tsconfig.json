{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": false,
    "esModuleInterop": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "preserveSymlinks": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "test", "dist", "sample"]
}
